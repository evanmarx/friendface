<h2>Tell us about you...</h2>

<%= simple_form_for(@profile, {url: user_profile_path(current_user)}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :sex, collection: ["Male", "Female"], as: :radio_buttons, :item_wrapper_class => 'inline', :required => true, :autofocus => true %>
    <%= f.input :birthday, as: :date, start_year: Date.today.year - 90,
      end_year: Date.today.year - 12, order: [:month, :day, :year], 
      :required => true, :autofocus => true %>
    <%= f.input :location, collection: ["New York", "New Jersey"], :required => true, :autofocus => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit" %>
  </div>
<% end %>

